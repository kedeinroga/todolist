<div id="<%= dom_id task %>">
  <p>Description: <%= task.description %></p>

  <p>Done:
    <%= task.done %>
  </p>
  <%= link_to "Toggle",  complete_task_path(task), remote: true, method: :patch %>

  <p><%= link_to "Edit tasks", edit_task_path(task.id) %></p>
  <%= button_to "Destroy this task", task, method: :delete, data: {confirm: "Are you sure?"} %>

</div>
